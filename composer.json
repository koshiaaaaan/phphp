{
  "name": "phphp/phphp",
  "description": "PHP html parser",
  "license": "MIT",
  "require": {
    "php": ">=7.0",
    "ext-json": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^7.4",
    "hoa/bench": "~3.0",
    "mikey179/vfsStream": "^1.6"
  },
  "autoload": {
    "psr-4": {
      "Phphp\\": "src/Phphp"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Phphp\\Tests\\": "tests"
    }
  },
  "scripts": {
    "test": [
      "phpunit --colors=always --testdox"
    ]
  },
  "bin": [
    "bin/phphp"
  ]
}
